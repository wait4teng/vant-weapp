@import '../common/style/var.pcss';

.van-notify {
  top: 0;
  opacity: 0;
  width: 100%;
  z-index: 110;
  color: $white;
  position: fixed;
  min-height: 32px;
  line-height: 2.3;
  font-size: 14px;
  text-align: center;
  background-color: #E64340;
  transition: all 0.4s ease;
  transform: translateZ(0) translateY(-100%);

  &--show {
    opacity: 1;
    transform: translateZ(0) translateY(0);
  }
}
