@import '../var.pcss';

@define-mixin hairline $border-retina-color: $border-color {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  right: -50%;
  bottom: -50%;
  transform: scale(0.5);
  pointer-events: none;
  box-sizing: border-box;
  transform-origin: center; /* cover wechat button:after default transforn-origin */
  border: 0 solid $border-retina-color;
}
