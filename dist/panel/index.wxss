.zui-panel {
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  margin-top: 10px;
  overflow: hidden;
}

.zui-panel-title {
  font-size: 14px;
  line-height: 14px;
  color: #999;
  padding: 10px 15px 0 15px;
}


.zui-panel--without-margin-top {
  margin-top: 0;
}
